@page
@model BikeStore.App.Web.Pages.ReporteGerencialModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Reporte Gerencial";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Informe Gerencial</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-light text-black mb-4">
                <div class="h3 card-body">Total Inversión</div>
                <div class="h4 card-body font-weight-bold">$ 30,000,202</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-black stretched-link" asp-page="/GestionInventario/Inventario">Ver más</a>
                    <div class="small text-black"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-light text-black mb-4">
                <div class="h3 card-body">Total Ganancia</div>
                <div class="h4 card-body font-weight-bold">$ 15,000,202</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-black stretched-link" asp-page="/GestionInventario/Inventario">Ver más</a>
                    <div class="small text-black"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-light text-black mb-4">
                <div class="h3 card-body">Total Trabajadores</div>
                <div class="h4 card-body font-weight-bold">30</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-black stretched-link" asp-page="/GestionUsuarios/Usuarios">Ver más</a>
                    <div class="small text-black"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-light text-black mb-4">
                <div class="h3 card-body">Total Clientes</div>
                <div class="h4 card-body font-weight-bold">105</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-black stretched-link" asp-page="/GestionClientes/GestionClientes">Ver más</a>
                    <div class="small text-black"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area me-1"></i>
                    Inversión
                </div>
                <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Ventas
                </div>
                <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
    </div>
</div>
