<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - BikeStore</title>
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">

</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <img class="logo" src="~/img/logo.jpeg" width="55" height="55">
        <a class="navbar-brand ps-3 tittlePageLogo" asp-page="/Bienvenida/Inicio">BikeStore</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i
                class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown"
                    aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-page="/Index" asp-route-cerrar="1">Cerrar Session</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading" id="core">Core</div>
                        <a id="btn-reporte-gerencial" class="nav-link" asp-page="/ReporteGerencial/ReporteGerencial">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Reporte Gerencial
                        </a>
                        <div class="sb-sidenav-menu-heading">Opciones</div>
                        <a  class="nav-link collapsed btn-gestion-user-icon" href="#" data-bs-toggle="collapse"
                            data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-user fa-fw"></i></div>
                            Gestion Usuarios
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse btn-gestion-user-icon" id="collapseLayouts" aria-labelledby="headingOne"
                            data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link btn-trabajador" asp-page="/GestionUsuarios/Usuarios">Gestionar Trabajador</a>
                                <a class="nav-link" asp-page="/GestionClientes/GestionClientes">Gestionar Clientes</a>
                            </nav>
                        </div>
                        <a id="btn-ventas" class="nav-link" asp-page="/GestionVentas/Ventas">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Gestion de Ventas
                        </a>
                        <a  id="btn-productos" class="nav-link" asp-page="/GestionProductos/Productos">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Gestion de productos
                        </a>
                        <a  id="btn-inventario" class="nav-link" asp-page="/GestionInventario/Inventario">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Gestion de Inventario
                        </a>
                    </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
            
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; BikeStore 2022</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>



    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/lib/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/assets/demo/chart-area-demo.js"></script>
    <script src="~/lib/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/lib/js/datatables-simple-demo.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>

    @{
        if(ViewData["script"] != null){
            <script src='~/js/@ViewData["script"]'></script>  
        }
    }  
    
    @RenderSection("Scripts", required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
