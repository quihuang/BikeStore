@page
@model BikeStore.App.Web.UsuariosModel
@{
    ViewData["Title"] = "Gestion Usuarios";
}

<div class="container">
  <div class="row">
    <div class="col-md-2 col-sm-12">

    </div>
    <div class="col-md-8 col-sm-12">
      <h1>Registro de Trabajadores</h1>
        <form method="post">
            <div class="form-group">
              <label for="nombre">Cedula</label>
              <input type="number" name="" id="cedula" class="form-control" placeholder="Ingrese su numero de cedula" aria-describedby="helpId" minlength="3" maxlength="50">
            </div>
            <div class="form-group">
              <label for="nombre">Nombres</label>
              <input type="text" name="" id="nombre" class="form-control" placeholder="Ingrese el nombre" aria-describedby="helpId" minlength="3" maxlength="50">
            </div>
            <div class="form-group">
              <label for="apellido">Apellidos</label>
              <input type="text" name="" id="apellido" class="form-control" placeholder="Ingrese el apellido" aria-describedby="helpId" minlength="3" maxlength="50">
            </div>
            <div class="form-group">
              <label for="apellido">Telefono</label>
              <input type="number" name="" id="telefono" class="form-control" placeholder="Ingrese el Telefono" aria-describedby="helpId" minlength="3" maxlength="50">
            </div>
            <div class="form-group">
              <label for="nombreUsuario">Nombre usuario</label>
              <input type="text" name="" id="nombreUsuario" class="form-control" placeholder="Ingrese el Nombre usuario" aria-describedby="helpId" minlength="3" maxlength="50">
            </div>
             <div class="form-group">
              <label for="contraseña">Contraseña</label>
              <input type="password" name="" id="contraseña" class="form-control" placeholder="Ingrese contraseña" aria-describedby="helpId" minlength="3" maxlength="50">
            </div>
            <div class="form-group">
              <label for="rol">rol</label>
              <select class="form-select form-control" aria-label="Default select example">
                <option selected>Seleccionar..</option>
                <option value="1">Comercial</option>
                <option value="2">Jefe Operativo</option>
                <option value="3">Bodeguero</option>
               </select>
            </div>
            <button type="submit" class="btn btn-primary">Crear</button>
        </form>
    </div>

    <div class="col-md-2 col-sm-12">

    </div>
  </div>
</div>