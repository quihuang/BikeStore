@page
@model IndexModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
    ViewData["script"] = "Login.js"; 
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">

        <div class="containerlogin align-items-center">
            <div class="card border-0 mt-5 containerloginTwo">
                <div class="dataLogin">
                    <div>
                        <h3 class="text-center font-weight-light my-4">Iniciar Sesión</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            @Html.AntiForgeryToken()
                            <div class="form-floating mb-3">
                                <input class="form-control" id="inputEmail" type="email"
                                    placeholder="name@example.com" />
                                <label for="inputEmail">Usuario</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" id="inputPassword" type="password" placeholder="Password" />
                                <label for="inputPassword">Contraseña</label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a id="btn-login" class="btn btn-primary loginbtn">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card border-0 mt-5 containerloginTwo imgpanellogin">
                <img class="imagenLogin" src="~/../img/logo.jpeg" alt="">
            </div>

        </div>
    </div>
    <div id="layoutAuthentication_footer">
        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid px-4">
                <div class="d-flex align-items-center justify-content-between small">
                    <div class="text-muted">Copyright &copy; Your BikeStore 2022</div>
                    <div>
                        <a href="#">Privacy Policy</a>
                        &middot;
                        <a href="#">Terms &amp; Conditions</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>
